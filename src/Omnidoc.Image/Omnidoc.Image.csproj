    <PackageTags>Omnidoc;Omnidoc.Image;image;document;extract;convert;preview;render</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE" Visible="false" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="SixLabors.ImageSharp" HintPath="..\..\lib\SixLabors.ImageSharp.dll" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Omnidoc.Image.Core\Omnidoc.Image.Core.csproj" />
  </ItemGroup>

</Project>